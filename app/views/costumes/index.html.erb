<h1 class="title-index">Costumes</h1>
<div class="container">
    <% @costumes.each do |costume| %>
      <div class="card-show">
        <ul class="list-style">
          <div class="face left-card">
              <%= cl_image_tag(costume.photo.key, height: 350, width: 150, crop: :fill) %>
          </div>
          <div class="face right-card">
            <br>
              <li><p><strong><%= costume.name %></strong></p></li>
            <br>
            <div class="btn-home link-info">
                <li><i class="fa-solid fa-circle-info"></i></li>
                <li><%= link_to "Plus d'information", costume_path(costume) %></li>
            </div>
          </div>
        </ul>
      </div>
    <% end %>
</div>
