
<div class="container-cards">
  <% @costumes.each do |costume| %>
    <div class="card">
      <ul class="list-style">
        <div class="face left-card">
          <%= cl_image_tag(costume.photo.key, height: 350, width: 175, crop: :fill) %>
        </div>
        <div class="face right-card">
          <br>
            <li><p><strong><%= costume.name %></strong></p></li>
          <br>
          <div class="btn-home link-info">
            <li><i class="fa-solid fa-circle-info"></i> <%= link_to "Plus d'information", costume_path(costume) %></li>
          </div>
        </div>
      </ul>
    </div>
  <% end %>
  </div>
</div>
